<div class="container d-flex justify-content-center align-items-center">
    <div class="card d-flex flex-row align-items-center text-end">
    <div class="title p-5">
        <h4><%= @task.title %></h4>
    </div>
        <div class="px-5 d-flex flex-column align-items-center">
        <p><strong><em>Memo:</em></strong> <%= @task.details %></p>
        <p> <%= @task.completed ? 'Task is completed 🎉' : 'Task is not completed yet 😏' %></p>
        <div class="pt-2">
        <%= link_to "Go Back", tasks_path, class: "btn btn-dark" %>
        <%= link_to 'edit task', edit_task_path, class: "btn btn-dark" %>
        <%= link_to 'destroy', delete_task_path, method: :delete, data: {confirm: 'Are you sure you want to delete it?'}, class: "btn btn-dark" %>
        </div>
    </div>
</div>